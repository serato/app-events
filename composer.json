{
    "name": "serato/app-events",
    "homepage": "https://github.com/serato/app-events",
    "description": "A PHP library for delivering application event data to external consumers.",
    "type": "library",
    "require": {
        "php" : ">=7.1",
        "psr/log": "^1.0.0",
        "monolog/monolog": "^1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0",
        "phpstan/phpstan-phpunit": "^0.11.0",
        "squizlabs/php_codesniffer": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Serato\\AppEvents\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Serato\\AppEvents\\Test\\": "tests/unit"
        }
    }
}
